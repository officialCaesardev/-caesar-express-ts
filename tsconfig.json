{
  "compilerOptions": {
    "target": "es2022",
    "module": "Node16",
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "./dist",

    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "paths": {
      "@/*": ["./*"],
      "@/type": ["./types/type.d.ts"]
    }
  },
  "include": ["src/**/*", ".eslintrc.js"]
}
